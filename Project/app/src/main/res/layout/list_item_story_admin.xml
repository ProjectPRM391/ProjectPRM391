<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_storycover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"


        app:srcCompat="@drawable/book" />

    <TextView
        android:id="@+id/tv_storyname"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_above="@id/tv_chapterNo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"

        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/iv_storycover"
        android:text="BookName"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_chapterNo"
        android:layout_width="5dp"
        android:layout_height="30dp"
        android:layout_alignStart="@id/tv_storyname"
        android:layout_alignLeft="@id/tv_storyname"
        android:layout_alignBottom="@id/iv_storycover"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnDelete"

        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:layout_alignTop="@id/tv_storyname"
        android:layout_alignRight="@id/tv_storyname"
        android:layout_marginTop="-6dp"
        android:text="Delete" />


</RelativeLayout>